<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="YLScrollView">

        <!-- Animation type for indicator -->
        <attr name="animationType" format="enum">
            <enum name="none" value="0" />
            <enum name="slide" value="1" />
            <enum name="fade" value="2" />
        </attr>
        <!-- Size of the indicator text -->
        <attr name="textSize" format="dimension"/>
        <!-- Content of the indicator text -->
        <attr name="text" format="string"/>
        <!-- Color of the indicator text -->
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="YLVerticalTextLabelView">

        <!-- Identity of Text begins from top or bottom -->
        <attr name="topDown" format="boolean" />
    </declare-styleable>
</resources>